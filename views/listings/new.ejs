<% layout("/layouts/boilerplate") %>

<body>
    <div class="row">
        <div class="col-8 offset-2">
            <form action="/listings" method="POST">

                <div class="mb-3">
                    <label for="title" class="mt-3 form-label">Listing Title</label>
                    <input class="form-control" type="text" name="title" placeholder="Enter a catchy title (e.g., Cozy Mountain Retreat)">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="description" placeholder="Describe your listing, amenities, and features"></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input class="form-control" type="text" name="image" placeholder="Paste the URL of your listing image">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price (per night)</label>
                        <input class="form-control" type="number" name="price" placeholder="Set the nightly price (e.g., 2500)">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input class="form-control" type="text" name="country" placeholder="Specify the country of your listing">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input class="form-control" type="text" name="location" placeholder="Enter the specific location of your listing">
                </div>
                <button type="submit" class="mb-3 btn btn-dark add-btn">Add</button>

            </form>
        </div>
    </div>
</body>
