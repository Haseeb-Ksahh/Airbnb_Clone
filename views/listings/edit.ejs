<% layout("/layouts/boilerplate") %>

<body>
    <div class="row">
        <div class="col-8 offset-2">
            <form action="/listings/<%= data.id %>?_method=PUT" method="POST" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="title" class="mt-3 form-label">New Title</label>
                    <input required class="form-control" type="text" name="title" value="<%= data.title %>" placeholder="Enter new title">
                    <div class="valid-feedback">Great choice! The new title looks good.</div>
                    <div class="invalid-feedback">Uh-oh! Please provide a new catchy title.</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">New Description</label>
                    <textarea required class="form-control" name="description" placeholder="Enter new description"><%= data.description %></textarea>
                    <div class="valid-feedback">Fantastic! Your new description is detailed and informative.</div>
                    <div class="invalid-feedback">Oops! Your new listing description is required.</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">New Image URL</label>
                    <input required class="form-control" type="text" name="image" value="<%= data.image %>" placeholder="Enter new image URL">
                    <div class="valid-feedback">New image URL looks good!</div>
                    <div class="invalid-feedback">Please provide a valid URL for the new listing image.</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">New Price (per night)</label>
                        <input required class="form-control" type="number" name="price" value="<%= data.price %>" placeholder="Enter new price">
                        <div class="valid-feedback">Awesome! You've set a valid new nightly price.</div>
                        <div class="invalid-feedback">Please enter a valid numeric value for the new nightly price.</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">New Country</label>
                        <input required class="form-control" type="text" name="country" value="<%= data.country %>" placeholder="Enter new country">
                        <div class="valid-feedback">New country specified successfully!</div>
                        <div class="invalid-feedback">Please provide the new country for your listing.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">New Location</label>
                    <input required class="form-control" type="text" name="location" value="<%= data.location %>" placeholder="Enter new location">
                    <div class="valid-feedback">New location details received!</div>
                    <div class="invalid-feedback">Please provide the new specific location for your listing.</div>
                </div>

                <button type="submit" class="mb-3 btn btn-dark add-btn">Save</button>

            </form>
        </div>
    </div>
</body>
