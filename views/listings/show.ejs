<% layout("/layouts/boilerplate") %>

<body>

    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <img src="<%= listing.image %>" class="card-img-top" alt="Listing Image">
                    <div class="card-body">
                        <h3 class="card-title" style="font-weight: 600;"><%= listing.title %></h3>
                        <p class="card-text">
                            <strong>Description:</strong> <%= listing.description %><br>
                            <strong>Price:</strong> &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
                            <strong>Location:</strong> <%= listing.location %><br>
                            <strong>Country:</strong> <%= listing.country %>
                        </p>
                            <a href="/listings/<%= listing.id %>/edit" class="btn btn-primary">Edit</a>
                        <form action="/listings/<%= listing.id %>?_method=DELETE" method="POST">
                            <button class="btn btn-dark mt-2">Delete this listing</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
